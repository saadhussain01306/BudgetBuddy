@model IEnumerable<ExpenseTracker.Models.Expense> // Correct namespace

<h1>Expenses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Description</td>
                <td>@expense.Category</td>
                <td>@expense.Amount</td>
                <td>@expense.Date.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-danger"
                        onclick="return confirm('Are you sure you want to delete this expense?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Add New Expense</a>
